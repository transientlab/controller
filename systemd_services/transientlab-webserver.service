# Show controller system
# : sc.service : service configuration for Linux server


[Unit]
Description=show_control
After=network.target
StartLimitIntervalSec=1
[Service]
Type=simple
Restart=always
RestartSec=1
User=kr315
ExecStart=/bin/bash -c 'cd /etc/sc && sudo node server.js'

[Install]
WantedBy=transientlab-controller.target